<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      
    <!-- View purchase.order form -->
    <record id="view_purchase_order_form" model="ir.ui.view">
        <field name="name">view.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_billback_invoice" class="oe_stat_button" icon="fa-refresh" invisible="billback_invoice_count == 0 or state in ('draft', 'sent', 'to approve')">
                  <field name="billback_invoice_count" widget="statinfo" string="Billback"/>
                  <field name="billback_invoice_ids" invisible="1"/>
              </button>            
            </xpath>
        </field>
    </record>

  </odoo>