<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="documents.DocumentsInspector.buttons.inherit.add_soft_archive" t-inherit="documents.DocumentsInspector.buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[@title='Open chatter']" position="before">

            <button t-if="records[0].data.archived and records[0].data.res_model" class="o_inspector_button o_archive o_active btn float-end" title="Unarchive"
                t-on-click.stop.prevent="onSoftUnarchive" t-att-disabled="editDisabled || locked">
                <i class="fa fa-fw fa-recycle"/>
            </button>   
       
            <button t-if="!records[0].data.archived and records[0].data.res_model" class="o_inspector_button o_archive o_active btn float-end" title="Archive"
                t-on-click.stop.prevent="onSoftArchive" t-att-disabled="editDisabled || locked">
                    <i class="fa fa-fw fa-archive"/>
            </button>


        </xpath>
    </t>
</templates>
