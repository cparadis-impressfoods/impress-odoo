<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Create a new Worksheet Template -->
    <record id="ws_hpp_20241202" model="worksheet.template">
        <field name="name">Worksheet HPP 2024-12-02</field>
        <field name="color">3</field>
        <field name="res_model">quality.check</field>
    </record>

    <!-- Add the required fields -->

    <!-- ws: x_hpp_log_id - Many2One Compute -->
    <record id='x_worksheet_20241202_hpp_log_id' model='ir.model.fields'>
        <field name="name">x_hpp_log_id</field>
        <field name="field_description">HPP Log</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.id"/>
        <field name="relation" model="ir.model" eval="'hpp.log'"/>
        <field name="ttype">many2one</field>
    </record>

    <record id='x_worksheet_20241202_hpp_log_id' model='ir.model.fields'>
        <field name="depends">x_quality_check_id</field>
        <field name="compute" eval="
'for rec in self:\n
    if not rec.x_hpp_log_id:\n
        existing_log = rec.env[\'hpp.log\'].search([\n
            (\'name\', \'=\', rec.x_quality_check_id.production_id.name)\n
        ])\n
        if not existing_log:\n
            rec[\'x_hpp_log_id\'] = rec.env[\'hpp.log\'].create({\n
                \'name\': rec.x_quality_check_id.production_id.name,\n
                \'quality_check_id\': rec.x_quality_check_id.id\n
            })\n
        else: \n
            rec[\'x_hpp_log_id\'] = existing_log[0]
            '">
        </field>
    </record>

    <!-- log: x_ws_xx_id - One2Many - x_hpp_log_id -->
    <record id='hpp_log_x_worksheet_20241202_id' model='ir.model.fields'>
        <field name="name">x_worksheet_20241202_id</field>
        <field name="field_description">Worksheet 2024-12-02</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_logs.model_hpp_log').id"/>
        <field name="relation" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.model"/>
        <field name="relation_field" model="ir.model.fields" eval="obj().env.ref('impress_quality_worksheets.x_worksheet_20241202_hpp_log_id').name"/>
        <field name="ttype">one2many</field>
        <field name="on_delete">cascade</field>
    </record>
   
    <!-- log_line: x_ws_xx_id - Many2One - x_hpp_log_line_ids -->
    <record id='hpp_log_line_x_worksheet_20241202_id' model='ir.model.fields'>
        <field name="name">x_worksheet_20241202_id</field>
        <field name="field_description">x_worksheet_20241202_id</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_logs.model_hpp_log_line').id"/>
        <field name="relation" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.model"/>
        <field name="ttype">many2one</field>
    </record>

    <!--ws: x_hpp_log_line_ids - One2Many -->
    <record id='x_worksheet_20241202_hpp_log_lines_id' model='ir.model.fields'>
        <field name="name">x_hpp_log_line_ids</field>
        <field name="field_description">HPP Log lines</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.id"/>
        <field name="relation" model="ir.model" eval="'hpp.log.line'"/>
        <field name="relation_field" model="ir.model.fields" eval="obj().env.ref('impress_quality_worksheets.hpp_log_line_x_worksheet_20241202_id').name"/>
        <field name="ttype">one2many</field>
        <field name="on_delete">cascade</field>
    </record>
    
    <!-- ws: x_qty_quality -->

    <record id='x_worksheet_20241202_qty_quality' model='ir.model.fields'>
        <field name="name">x_qty_quality</field>
        <field name="field_description">Quantity used for quality</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.id"/>
        <field name="related">x_hpp_log_id.qty_quality</field>
        <field name="ttype">integer</field>
    </record>
    <record id='x_worksheet_20241202_qty_scrapped' model='ir.model.fields'>
        <field name="name">x_qty_scrapped</field>
        <field name="field_description">Quantity scrapped</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.id"/>
        <field name="related">x_hpp_log_id.qty_scrapped</field>
        <field name="ttype">integer</field>
    </record>
    <record id='x_worksheet_20241202_qty_redone' model='ir.model.fields'>
        <field name="name">x_qty_redone</field>
        <field name="field_description">Quantity redone</field>
        <field name="model_id" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_hpp_20241202').model_id.id"/>
        <field name="related">x_hpp_log_id.qty_redone</field>
        <field name="ttype">integer</field>
    </record>


</odoo>
