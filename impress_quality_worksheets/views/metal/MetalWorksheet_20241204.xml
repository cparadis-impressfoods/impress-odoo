<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='MetalWorksheet_20241202_form_view' model='ir.ui.view'>
        <field name="name">Metal.worksheet.20241202.form.view</field>
        <field name="model" model="ir.model" eval="obj().env.ref('impress_quality_worksheets.ws_metal_20241204').model_id.model"/>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form create="false" js_class="worksheet_validation">
                <sheet>
                    <group invisible="context.get('studio') or context.get('default_x_quality_check_id')">
                        <group>
                            <field name="x_quality_check_id"/>
                        </group>
                    </group>

                    <field name="x_metal_log_line_ids" nolabel="1">
                        <form>
                            <group>
                                <group>
                                    <field name="calibration" required='1'/>
                                    <field name="ejection" required='1'/>
                                    <field name="reject_value" required='1'/>
                                    <field name="mean_weight" required='1'/>
                                    <field name="start_date" required='1'/>
                                    <field name="notes"/>
                                </group>
                                <group>
                                    <field name="ferrous" required='1'/>
                                    <field name="non_ferrous" required='1'/>
                                    <field name="stainless" required='1'/>
                                    <field name="torque" required='1'/>
                                    <field name="signature" widget="signature" options="{'size':[0,90]}" required='1'/>
                                </group>
                            </group>
                        </form>
                    </field>
                    <div class="text-center"><strong>Pour l'utilisation exclusive de Impress Foods. Mis à jour le 04 Décembre 2024. Feuille de contrôle Détecteur de Métal </strong></div>
                </sheet>   
            </form>
        </field>
    </record>
</odoo>
