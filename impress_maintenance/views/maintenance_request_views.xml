<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View maintenance.request form -->
    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">view.maintenance.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="replace">
                <page string="Notes">
                    <group>
                        <field name="description" placeholder="Maintenance Description" 
                            groups="impress_maintenance.group_maintenance_administrator"/>
                        <field name="description" placeholder="Maintenance Description" readonly="1" 
                            groups="!impress_maintenance.group_maintenance_administrator"/>

                        <field name="notes" placeholder="Maintenance Notes"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="after">
                <field name="technician_id" widget="many2one_avatar_employee"/>
            </xpath>
        </field>
    </record>


    <record id="view_maintenance_request_search" model="ir.ui.view">
        <field name="name">view.maintenance.request.search</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_maintenances']" position="after">
                <separator/>
                <filter string="Corrective" name="corrective" domain="[('maintenance_type', '=', 'corrective')]"/>
                <filter string="Preventive" name="preventive" domain="[('maintenance_type', '=', 'preventive')]"/>
                <separator/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="technician_id" filters="1"/>
                <field name="maintenance_type" filters="1"/>
            </xpath>
        </field>

    </record>

    <!-- TODO : Split maintenance customizations and maintenance/quality additions -->
    <record id="view_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">view.maintenance.request.calendar</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="color">technician_id</attribute>
            
            </xpath>
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="technician_id" filters="1"/>
                <field name="maintenance_type" filters="1"/>
            </xpath>
        </field>

    </record>


    <record id="view_maintenance_request_tree_ph_calibration" model="ir.ui.view">
        <field name="name">view_maintenance_request_tree_ph_calibration</field>
        <field name="model">maintenance.request</field>   
        <field name="arch" type="xml">
            <tree string="pH-metre calibrations">
                <field name="name"/>
                <field name="schedule_date"/>
                <field name="user_id"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="action_maintenance_quality_dashboard" model="ir.actions.act_window">
        <field name="name">Quality Dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.team</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="maintenance.maintenance_team_kanban"/>
        <field name="domain" eval="[('team_tag_ids', 'in', [ref('impress_maintenance.team_tag_quality')])]"/>
    </record>

    <record id="action_quality_maintenance_request_cal" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">maintenance.request</field>
        <field name="view_mode">calendar,kanban,tree,form,pivot,graph,activity</field>
        <field name="view_id" ref="maintenance.hr_equipment_view_calendar"/>
        <field name="domain" eval="[('maintenance_team_id.team_tag_ids', 'in', [ref('impress_maintenance.team_tag_quality')])]" />
        <field name="context">{
            'search_default_active': True,
            'search_default_todo': True,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new maintenance request
            </p><p>
                Follow the process of the request and communicate with the collaborator.
            </p>
        </field>
    </record>


</odoo>