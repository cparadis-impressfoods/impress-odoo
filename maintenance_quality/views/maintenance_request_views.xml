<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View maintenance.request form -->
    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">view.maintenance.request.form</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_quality_checks" type="object" class="oe_stat_button" icon="fa-check" invisible="quality_check_todo_count == 0">
                    <field string="Quality Checks" name="quality_check_todo_count" widget="statinfo"/>
                </button>
                <button name="action_view_quality_checks_pass" type="object" class="oe_stat_button text-success" icon="fa-check" invisible="quality_check_pass_count == 0">
                    <field string="Quality Checks" name="quality_check_pass_count" widget="statinfo"/>
                </button>
                <button name="action_view_quality_checks_fail" type="object" class="oe_stat_button text-danger" icon="fa-check" invisible="quality_check_fail_count == 0">
                    <field string="Quality Checks" name="quality_check_fail_count" widget="statinfo"/>
                </button>
                <button name="action_view_quality_alerts" type="object" class="oe_stat_button" icon="fa-bell" invisible="quality_alert_count == 0">
                    <field string="Quality Alerts" name="quality_alert_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>