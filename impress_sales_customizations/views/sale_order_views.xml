<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_gantt" model="ir.ui.view">
        <field name="name">sale.order.view.gantt</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <gantt
                date_start="date_order"
                date_stop="date_order"
                default_scale="week"
                scales="week,month,year"
                string="Sales Orders"
                display_unavailability="false"
                precision="{'day':'hour:half','week':'day:half'}"
                total_row="false"
                decoration-danger="state == 'cancel'"
                color="id"
            >
                <field name="state" />
                <field name="partner_id" />
                <field name="invoice_status" />
                <templates>
                    <div t-name="gantt-popover">
                        <div t-if="partner_id">
                            <strong>Customer â€” </strong>
                            <t t-esc="partner_id[1]" />
                        </div>
                        <div>
                            <strong>
                                <span class="text-success" t-if="state =='sale'">Sale</span>
                            </strong>
                        </div>
                        <div>
                            <strong>
                                <span t-if="invoice_status=='invoiced'">Invoiced</span>
                                <span t-if="invoice_status=='no'">Nothing to invoice</span>
                                <span t-if="invoice_status=='to invoice'">To invoice</span>
                            </strong>
                        </div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>

    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity,gantt</field>
    </record>

    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">gantt,tree,kanban,form,calendar,pivot,graph,activity</field>
    </record>
</odoo>