<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">
    <t t-name="add_quality_check" t-inherit="mrp_workorder.MrpDisplayMenuDialog" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[@name='addComponent']" position="after">

            <button class="btn btn-outline-secondary d-flex justify-content-between align-items-center p-3 fs-3"
                    t-on-click="() => this.callAction('action_open_on_demand_quality_check')"
                    name="addComponent">
                Create a Quality Check <i class="oi oi-chevron-right"/>
            </button>

        </xpath>
    </t>
</templates>
