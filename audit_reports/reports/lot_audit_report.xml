<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="report_lot_audit" model="ir.actions.report">
        <field name="name">Lot_audit_report</field>
        <field name="model">lot.audit.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">audit_reports.report_lot_audit_report_view</field>
        <field name="report_file">audit_reports.report_lot_audit_report</field>
        <field name="print_report_name">'%s' % object.lot_id.name</field>
        <field name="binding_model_id" ref="model_lot_audit_report"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_lot_audit_report_view">
        <t t-call="web.html_container">
            <t t-call="audit_reports.audit_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <!--<div class="oe_structure"/>-->
                        <!-- Set up general stuff -->
                        <t t-call="audit_reports.stylesheet"/>
                        <t t-set="lots" t-value="o.get_all_downstream_moves(o.lot_id)"/>


                        <!-- Start actual report -->
                        <h2 class="mt-2">
                            <span> Traceability Report </span>
                        </h2>

                        <t t-call="audit_reports.report_info"/>

                        <!-- Traceability tables -->
                        <h3 class="mt-2"><span>Traceability</span></h3>
                        <t t-call="audit_reports.traceability_table"/>
                    

                        <div style="page-break-before: always;"/>

                        <!-- Recall by client -->
                        <h3 class="mt-2"><span>Recall by Client</span></h3>
                        <t t-call="audit_reports.client_recall_table"/>
                        
                        <div style="page-break-before: always;"/>

                        <h3 class="mt-2"><span>Recall by Products</span></h3>
                        <!-- Recall by lot -->
                        <t t-call="audit_reports.product_recall_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="client_recall_table">
        <t t-set="client_data" t-value="o.get_client_recalls()"/>
        <table class="table table-bordered">
            <t t-set="grand_total" t-value="0"/>
            <thead>
                <tr>
                    <th><span>Date</span></th>
                    <th><span>Product</span></th>
                    <th><span>Lot</span></th>
                    <th><span>Quantity</span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="client_data" t-as="client">
                    <t t-set="total" t-value="0"/>
                    <div class="pb-prevent">
                        <tr class="bg-light"> 
                            <td colspan="4" class="text-center"><span t-out="client.display_name"/></td>
                        </tr>
                        <t t-set="moves" t-value="client_data[client]"/>
                        <t t-foreach="moves" t-as="move">
                            <tr>
                                <td class="text-center"><span t-out="move.date.date()"/></td>
                                <td class="text-center"><span t-out="move.product_id.display_name"/></td>
                                <td class="text-center"><span t-out="move.lot_id.display_name"/></td>
                                <td class="text-end"><span t-out="'%.2f'%move.quantity"/></td>
                                <t t-set="total" t-value="total+ move.quantity"/>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="3" class="text-end"><span>Total</span></td>
                            <td class="text-end"><span t-out="'%.2f'%total"/></td>
                        </tr>
                        <t t-set="grand_total" t-value="grand_total + total"/>
                    </div>
                </t>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><span class="text-bold">Grand Total</span></td>
                    <td class="text-end"><span class="text-bold" t-out="'%.2f'%grand_total"/></td>
                </tr>
            </tfoot>
        </table>
    
    </template>

    <template id="product_recall_table">
        <t t-set="product_data" t-value="o.get_product_recalls()"/>
        <table class="table table-bordered">
            <t t-set="grand_total" t-value="0"/>
            <thead>
                <tr>
                    <th><span>Lot</span></th>
                    <th><span>Quantity</span></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="product_data" t-as="product">
                    <t t-set="total" t-value="0"/>
                    <div class="pb-prevent">
                        <tr class="bg-light"> 
                            <td colspan="2" class="text-center"><span t-out="product.display_name"/></td>
                        </tr>
                        <t t-set="move" t-value="product_data[product]"/>
                        <tr>
                            <td class="text-center"><span t-out="move[0].display_name"/></td>
                            <td class="text-end"><span t-out="'%.2f'%move[1]"/></td>
                            <t t-set="total" t-value="total + move[1]"/>
                        </tr>
                        <tr>
                            <td colspan="1" class="text-end"><span>Total</span></td>
                            <td class="text-end"><span t-out="'%.2f'%total"/></td>
                        </tr>
                        <t t-set="grand_total" t-value="grand_total + total"/>
                    </div>
                </t>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="1" class="text-end"><span class="text-bold">Grand Total</span></td>
                    <td class="text-end"><span class="text-bold" t-out="'%.2f'%grand_total"/></td>
                </tr>
            </tfoot>
        </table>
    
    </template>

    <template id="report_info">
        <div class="row mt-4 mb-2" id="informations">
            <div class="col-auto col-3 mw-100 mb-2">
                <t t-call="audit_reports.report_summary"/>
            </div>
            <div class="col-auto col-1 mw-100 mb-2"/>
            <div class="col-auto col-3 mw-100 mb-2">
                <t t-call="audit_reports.lot_summary"/>
            </div>
        </div>
    </template>

    <template id="report_summary">
        <table class="table table-sm table-borderless">
            <tbody>
                <tr>
                    <th scope="row" class="text-start"><span>Product</span></th>
                    <td><span t-out="o.lot_id.product_id.display_name"/></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start"><span>Lot</span></th>
                    <td><span t-out="o.lot_id.display_name"/></td>
                </tr>
                <tr>
                    <th scope="row" class="text-start"><span>Creation Date</span></th>
                    <td><span t-out="o.lot_id.create_date.date()"/></td>
                </tr>
            </tbody>
        </table>


    </template>

    <template id="lot_summary">
        <t t-set="total" t-value='0'/>
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th scope="col" colspan="2" class="text-center"><span>Bilan</span></th>
                </tr>
            </thead>
            <tbody>
                <t t-set="value" t-value="o.get_total_bought()"/>
                <tr t-if="value != 0">
                    <th scope="row" class="text-center"><span>Purchased</span></th>
                    <td class="text-end"><span t-out="'%.2f'%value"/></td>
                    <t t-set="total" t-value="total + value"/>
                </tr>

                <t t-set="value" t-value="o.get_total_produced()"/>
                <tr t-if="value != 0">
                    <th scope="row" class="text-center"><span>Produced</span></th>
                    <td class="text-end"><span t-out="'%.2f'%value"/></td>
                    <t t-set="total" t-value="total + value"/>
                </tr>

                <t t-set="value" t-value="o.get_total_used()"/>
                <tr t-if="value != 0">
                    <th scope="row" class="text-center"><span>Used</span></th>
                    <td class="text-end"><span t-out="'%.2f'%value"/></td>
                    <t t-set="total" t-value="total + value"/>
                </tr>

                 <t t-set="value" t-value="o.get_total_delivered()"/>
                <tr t-if="value != 0">
                    <th scope="row" class="text-center"><span>Delivered</span></th>
                    <td class="text-end"><span t-out="'%.2f'%value"/></td>
                    <t t-set="total" t-value="total + value"/>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <th scope="row" class="text-center"><span>Total</span></th>
                    <td class="text-end"><span t-out="'%.2f'%(total)"/></td>
                </tr>
            </tfoot>
        </table>
    </template>

    <template id="traceability_table">
        <table class="table table-bordered table-striped">
            <tbody>
                <!-- Go over each lot as a key -->
                <t t-foreach="lots" t-as="lot">
                    <t t-set="total" t-value="0"/>
                    <div class="pb-prevent">
                        <tr class="bg-light">
                            <td colspan="4" class="text-center"><span t-out="o.get_name(lot)"/></td>
                        </tr>
                        <tr colspan="4"><td>
                            <table class="table table-bordered">
                                <tbody>
                                    <!-- Go over each key in lots[lot] = {} -->
                                    <t t-set="value" t-value="lots[lot]"/>
                                    <t t-foreach="value" t-as="move_type">
                                        <!-- Go over the content of each key in lots[lot][move_type] = []-->
                                        <t t-set="moves" t-value="value[move_type]"/>
                                        <t t-foreach="moves" t-as="move">
                                            <t t-call="audit_reports.move_row">
                                                <t t-set="current_move" t-value="move"/>
                                                <t t-set="move_type" t-value="move_type"/>
                                            </t>
                                            <t t-set="total" t-value="total + o.get_sml_qty(move)"/>
                                        </t>
                                    </t>
                                    <tr>
                                        <td colspan='4' class="text-end">
                                            <span>Total</span>
                                        </td>
                                        <td class="text-end">
                                            <span t-out="'%.2f'%(total)"/><span> </span><span t-out="lot.product_id.uom_id.display_name"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td></tr>
                    </div>
                </t>
            </tbody>
        </table>
    </template>

    <template id="move_row">
        <tr>
            <t t-set="quantity" t-value="o.get_sml_qty(current_move)"/>
            <td><span t-out="o.get_sml_type_display_name(move_type)"/></td>
            <td><span t-out="o.get_name(current_move)"/></td>
            <td><span t-out="o.get_add_info(current_move)"/></td>
            <td><span t-out="current_move.date.date()"/></td>

            <td t-if="quantity &gt;= 0" class="text-end">
                <span class="text-success" t-out="'%.2f'%quantity"/><span> </span><span t-out="current_move.product_id.uom_id.display_name"/>
            </td>
            <td t-if="quantity &lt; 0" class="text-end">
                <span class="text-danger" t-out="'%.2f'%quantity"/><span> </span><span t-out="current_move.product_id.uom_id.display_name"/>
            </td>
        </tr>
        <t t-set="total" t-value="total + quantity"/>
    </template>

    <template id="render_lot_traceability">
        <t t-foreach="lots_data.get('child_lots', {}).items()" t-as="lot_info">
            <div class="o_traceability_lot_container">
                <!--<div class="o_lot_header">-->
                <div>
                    <h3>
                        Lot: <t t-esc="lot_info[0]"/>
                    </h3>
                </div>
                
                <!--<div class="o_lot_movements">-->
                <div>
                    <table class="o_table o_table_bordered">
                        <thead>
                            <tr>
                                <th>Movement Type</th>
                                <th>Move Lines</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="movement_types" t-value="['receptions', 'inventory_adjustments_in', 'unbuild_in', 'mo_in', 'returns_in', 'mo_out', 'inventory_adjustments_out', 'unbuild_out', 'deliveries', 'scrap']"/>
                            <t t-foreach="movement_types" t-as="move_type">
                                <t t-set="move_lines" t-value="lots_data.get(move_type, [])"/>
                                <tr t-if="move_lines">
                                    <td><t t-esc="move_type.replace('_', ' ').title()"/></td>
                                    <td>
                                        <t t-foreach="move_lines" t-as="move_line">
                                            <span class="o_tag">
                                                <t t-esc="move_line"/>
                                            </span>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                
                <!-- Recursively render child lots -->
                <t t-if="lot_info[1].get('child_lots')">
                    <!--<div class="o_lot_children">-->
                    <div>
                        <t t-call="audit_reports.render_lot_traceability">
                            <t t-set="lots_data" t-value="lot_info[1]"/>
                            <t t-set="depth" t-value="depth + 1"/>
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="render_nested_dict">
        <ul>    
            <span t-out="o.get_name(dict_data['Lot'])"/>
            <ul>
                <t t-foreach="dict_data" t-as="key">
                    <li t-if="len(key_value) != 0 and key != 'Lot'">
                        
                        <span class="key"><t t-esc="o.get_name(key)"/>:</span>
                        <t t-set="value" t-value="dict_data[key]"/>

                        <t t-if="o.is_mapping(value)">
                            <t t-foreach="value" t-as="key">
                                <ul>
                                    <span t-if="depth &lt;= 1" class="key"><t t-esc="o.get_name(key)"/>:</span>
                                    <t t-set="depth" t-value="depth + 1"/>
                                    <t t-call="audit_reports.render_nested_dict">
                                        <t t-set="dict_data" t-value="value[key]"/>
                                    </t>
                                </ul>
                            </t>
                        </t>
                        <t t-elif="o.is_iterable(value) and not o.is_string(value)">
                            <ul>
                                <t t-foreach="value" t-as="list_item">
                                    <li t-if="len(list_item) != 0">
                                        <t t-if="o.is_mapping(list_item)">
                                            <t t-set="depth" t-value="depth + 1"/>
                                            <t t-call="audit_reports.render_nested_dict">
                                                <t t-set="data" t-value="list_item"/> 
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <span class="value"><t t-esc="o.get_name(list_item)"/></span>
                                            <t t-set="depth" t-value="depth-1"/>
                                        </t>
                                    </li>
                                </t>
                            </ul>
                        </t>
   
                        <t t-else="">
                            <span class="value"><t t-esc="o.get_name(value)"/></span>
                            <t t-set="depth" t-value="depth-1"/>
                        </t>
                    </li>
                </t>
            </ul>
        </ul>
    </template>

    <template id="audit_layout" name="audit layout" inherit_id="web.internal_layout" primary="True">
        <xpath expr="//div[1]" position="replace">
            <div class="header">
                <div class="row">
                    <div class="col-3">
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>
                    <div class="col-2 offset-2 text-center">
                        <span>Impress Foods</span>
                    </div>
                    <div class="col-2 offset-3 text-end">
                        <ul class="list-inline">
                            <li class="list-inline-item"><span class="page"/></li>
                            <li class="list-inline-item">/</li>
                            <li class="list-inline-item"><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="stylesheet">
        <style type="text/css">
            .nested-tree {
                font-family: Arial, sans-serif;
                margin: 20px 0;
                line-height: 1.6;
            }
            .nested-tree ul {
                list-style-type: none;
                padding-left: 20px;
                border-left: 1px solid #ccc;
            }
            .nested-tree > ul {
                border-left: none;
            }
            .nested-tree li {
                margin: 5px 0;
                position: relative;
            }
            .nested-tree .key {
                font-weight: bold;
                color: #007bff;
                margin-right: 5px;
            }
            .nested-tree .value {
                color: #28a745;
            }

            .pb-prevent {
                page-break-inside: avoid !important;
                page-break-after: avoid !important;
                page-break-before: avoid !important;
            }
        </style>
    </template>
</odoo>
