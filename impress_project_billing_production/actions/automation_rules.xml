<?xml version='1.0' encoding="utf-8"?>
<odoo><data>
    <record id="impress_project_billing_production_create_task_production" model="base.automation">
        <field name='name'>Create project task from production order</field>
        <field name='model_id' ref="mrp.model_mrp_production"/>
        <field name='trigger'>on_state_set</field>
        <field name='trg_selection_field_id' ref='mrp.selection__mrp_production__state__confirmed'/>
        <field name='filter_pre_domain'>[('x_related_project', '!=', False)]</field>
        <field name='filter_domain'>[('state','=','confirmed')]</field>
        <field name='action_server_ids' eval="[(6, 0, [ref('impress_project_billing_production.action_create_task')])]"/>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('mrp.field_mrp_production__state')])]"/>
    </record>

    <record id="impress_project_billing_production_update_task_production" model="base.automation">
        <field name='name'>Update project task from production order</field>
        <field name='model_id' ref="mrp.model_mrp_production"/>
        <field name='trigger'>on_state_set</field>
        <field name='trg_selection_field_id' ref='mrp.selection__mrp_production__state__done'/>
        <field name='filter_pre_domain'>[('x_related_project', '!=', False)]</field>
        <field name='filter_domain'>[('state','=','done')]</field>
        <field name='action_server_ids' eval="[(6, 0, [ref('impress_project_billing_production.action_update_task')])]"/>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('mrp.field_mrp_production__state')])]"/>
    </record>

</data></odoo>