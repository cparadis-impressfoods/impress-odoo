<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View product.template form -->
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">view.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page string="Maintenance" name="maintenance" invisible="product_variant_count != 1">
                    <group>
                        <group>
                            <field name="maintenance_equipment_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
