<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_mrp_inherit_production_billing" model="ir.ui.view">
            <field name="name">sale.order.inherited.form.mrp.inherit.production.billing</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_view_linked_productions"
                        type="object" icon="fa-wrench" invisible="linked_production_count == 0"
                        groups="mrp.group_mrp_user">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="linked_production_count" />
                            </span>
                            <span class="o_stat_text">Manufacturing</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>