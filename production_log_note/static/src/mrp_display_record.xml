<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">

    <t t-name="mrp_workorder.mrp_display_record.inherit.production_log_note" t-inherit="mrp_workorder.MrpDisplayRecord" t-inherit-mode="extension" owl="1">

        <xpath expr="//ul[@class='list-group list-group-flush']/MrpWorksheet[1]" position="before">
            <li t-if="logNote" class="o_mrp_display list-group-item d-flex justify-content-between align-items-center " style="background-color:#ffe600" t-on-click="() => this.editLogNote()">
                <div class="text-truncate" t-out="logNote" />
                <button class="btn fa fa-pencil-square-o" title="Display Log Note"></button>
            </li>
        </xpath>
    </t>

</templates>
