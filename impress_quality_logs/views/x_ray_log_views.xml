<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View x_ray.log View Tree -->
    <record id="view_x_ray_log_tree" model="ir.ui.view">
        <field name="name">view.x_ray.log.tree</field>
        <field name="model">x_ray.log</field>
        <field name="arch" type="xml">
            <tree default_order='create_date desc'>
                <field name="name"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- View x_ray.log form -->
    <record id="view_x_ray_log_form" model="ir.ui.view">
        <field name="name">view.x_ray.log.form</field>
        <field name="model">x_ray.log</field>
        <field name="arch" type="xml">
            <form string="X_ray Log">
                <sheet>
                    <field name="production_id" invisible="1"/>
                    <field name="quality_check_id" invisible="1"/>
                     <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_linked_production" type="object" icon="fa-wrench" 
                            groups="mrp.group_mrp_user" invisible="not production_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Manufacturing</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_x_ray_lines" type="object" icon="fa-magnet" 
                            groups="mrp.group_mrp_user" invisible="not log_line_ids">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">X-Ray Lines</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_quality_worksheet" type="object" icon="fa-pencil" 
                            groups="mrp.group_mrp_user" invisible="not quality_check_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Worksheet</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                    </group>
                    <field name="log_line_ids" nolabel='1' readonly='1'/>
                    <group>
                        <group>
                            <field name="signature" widget="signature" options="{'size':[0,90]}" string="Weekly Verification"/>
                            <field name="weekly_signature_date"/>
                        </group>
                        <group>
                            <field name="monthly_signature" widget="signature" options="{'size':[0,90]}" string="Monthly Verification"/>
                            <field name="monthly_signature_date"/>
                            
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- View x_ray.log search -->
    <record id="view_x_ray_log_search" model="ir.ui.view">
        <field name="name">view.x_ray.log.search</field>
        <field name="model">x_ray.log</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action x_ray.log -->
    <record id="action_x_ray_log" model="ir.actions.act_window">
        <field name="name">X-ray Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">x_ray.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new X_ray Log.
            </p>
        </field>
    </record>

</odoo>
