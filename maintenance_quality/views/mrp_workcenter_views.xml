<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View mrp.workcenter form -->
    <record id="view_mrp_workcenter_form" model="ir.ui.view">
        <field name="name">view.mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_quality_points" type="object" class="oe_stat_button" icon="fa-list" invisible="quality_point_count == 0">
                    <field string="Quality Points" name="quality_point_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>