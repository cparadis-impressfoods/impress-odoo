<?xml version='1.0' encoding="utf-8"?>
<odoo><data>
    <record id="account_move_form_billback" model="ir.ui.view">
        <field name="name">account.move.billback</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority">16</field>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_reload_ai_data']" position="after">
                <button string="Billback" name="%(impress_accounting_customizations.impress_action_create_billback)d" type="action" invisible="move_type not in ['in_invoice'] or x_billback_invoice" readonly="True"/>
            </xpath>
  
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='ref']" position="after">
                <field name="x_billback_partner" invisible="move_type != 'in_invoice'"/>
            </xpath>

            <xpath expr="//form[1]/header[1]" position="after">
                <div groups="account.group_account_invoice,account.group_account_readonly" class="alert alert-info" role="alert" invisible="not x_billback_invoice">
                  This Vendor bill has been billbacked!
                </div>
            </xpath>


        </field>
    </record>
</data></odoo>